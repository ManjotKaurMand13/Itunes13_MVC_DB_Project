@model Itunes_13.Models.Rating

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Rate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RatingValue" class="control-label"></label>
                <select asp-for="RatingValue" class="form-control" >
                    <option value="-1">-1</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                </select>
                <span asp-validation-for="RatingValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongId" class="control-label"></label>
                <select asp-for="SongId" class ="form-control" asp-items="ViewBag.SongId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

