@model Itunes_13.Models.ViewModels.ViewSongsViewModel;

@{
    ViewData["title"] = "View Songs";
}

<h1>View Songs</h1>
<div class="row">
    <div class="col-md-4">
        <form action="ViewSongs">
            <div class="form-group">
                <label asp-for="Id" class="control-label">User</label>
                <select asp-for="Id" class="form-control" asp-items="@Model.Users"></select>
            </div>
            <div class="form-group">
                <input type="submit" class="form-control" />
            </div>
        </form>
    </div>
</div>

@if (@Model.User != null)
{
    @foreach (KeyValuePair<string, List<Song>> artistSong in @Model.ArtistSongs)
    {
        <h4>@artistSong.Key</h4>
        <ul>
            @foreach (var song in @artistSong.Value)
            {
                <li>@song.Name</li>
            }
        </ul>
    }
}

